<%- include('header.ejs') %>
<div class="py-6">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8 mt-6">
      <div class="flex flex-col md:flex-row -mx-4">
        <div class="md:flex-1 px-4 my-auto">
          <div x-data="{ image: 1 }" x-cloak>
              <div class="h-64 md:h-80 rounded-lg bg-gray-100 mb-4">
                  <div class="h-64 md:h-80 rounded-lg bg-gray-100 mb-4 flex items-center justify-center rounded-md">
                  <% if(cars.length!=0){ cars.forEach((cars)=>{ %>
                <!-- <span class="text-5xl my-auto">1</span> -->
                <img src="<%=cars.imageuri %>" alt="" class="rounded-lg shadow-lg">
              </div>
            </div>
  
            <div class="flex -mx-2 mb-4">
              <template x-for="i in 4">
                <div class="flex-1 px-2">
                  <button x-on:click="image = i" :class="{ 'ring-2 ring-indigo-300 ring-inset': image === i }" class="focus:outline-none w-full rounded-lg h-24 md:h-32 bg-gray-100 flex items-center justify-center">
                    <span x-text="i" class="text-2xl"></span>
                  </button>
                </div>
              </template>
            </div>
          </div>
        </div>

        <div class="md:flex-1 px-4">
            <h2 class="mb-2 leading-tight tracking-tight font-bold text-gray-800 text-2xl md:text-3xl"><%=cars.title%></h2>
            <!-- <p class="text-gray-500 text-sm">By <a href="#" class="text-blue-600 hover:underline">User</a></p> -->
            
            <div class="flex items-center space-x-4 my-4">
                <div>
                    <div class="rounded-lg bg-gray-100 flex py-2 px-3">
                        <span class="text-blue-400 mr-1 mt-1">HRK</span>
                        <span class="font-bold text-blue-600 text-3xl"><%=cars.price%></span>
                        <span class=" text-blue-400 text-3xl mx-2">~</span>
                        <span class="text-blue-400 mr-1 mt-1">â‚¬</span>
                        <span class="font-bold text-blue-600 text-3xl"><%=cars.price*0.13%></span>
                    </div>
                </div>
            </div>
            
            <ul class="text-gray-600 uppercase">
                <li><span class="font-bold">Car: </span> <%=cars.manufacturer %> <%=cars.model %> </li>
                <li><span class="font-bold">Production year: </span> <%=cars.manufacturedyear %></li>
                <li><span class="font-bold">Engine: </span><%=cars.enginesize %> ccm3 <%=cars.enginepower %> KW <%=cars.fuel %> engine</li>
                <li><span class="font-bold">Mileage: </span> <%=cars.mileage %> KM</li>
                <li><span class="font-bold">Transmission: </span> <%=cars.shiftsystem %></li>
                <li><span class="font-bold">VIN Number: </span> <%=cars.vinnumber %></li>
                <li><span class="font-bold">Service history: </span> 
                    <% if(cars.servicehistory == 0) {%>
                    No
                    <%} else { %>
                    Yes
                    <% } %>
                </li>
                <li><span class="font-bold">Garaged: </span> 
                    <% if(cars.garaged == 0) {%>
                        No
                        <%} else { %>
                        Yes
                        <% } %>
                </li>
                <li><span class="font-bold">Crashed: </span> 
                    <% if(cars.crashed == 0) {%>
                        No
                        <%} else { %>
                        Yes
                        <% } %>
                </li>
                <li><span class="font-bold">Number of owners: </span> <%=cars.owner %></li>
            </ul>
            <div class="flex py-4 space-x-4">
                
                <button type="button" class="h-14 px-6 py-2 font-semibold rounded-xl bg-blue-600 hover:bg-blue-500 text-white">
                    Contact number: +<a href="tel:+<%=user.phonenumber%>"><%=user.phonenumber%></a>
                </button>
            </div>
        </div>
    </div>
    <div class="my-auto flex ">
        <p class="text-gray-500"><%=cars.description%></p>
    </div>
    <% })} %>
</div>
</div>